<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="30dp"
    tools:context=".AddRecipeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/namn_pa_recept_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recipe_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/name_of_recipe"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textInputEditText"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/black"
            android:hint="@string/name_of_recipe"
            android:textColorHint="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/antal_portioner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/namn_pa_recept_container">

        <TextView
            android:id="@+id/nr_of_servings_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/nr_of_portions"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/nr_of_servings_spinner"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/nr_of_servings_spinner"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/style_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/antal_portioner_container"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/ingredients_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/ingredients"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            tools:layout_editor_absoluteX="1dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/name_of_ingredient"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/measurement_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/measurement_spinner"
                app:layout_constraintTop_toTopOf="@+id/measurement_spinner" />

            <Spinner
                android:id="@+id/measurement_spinner"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/style_spinner"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintStart_toEndOf="@+id/editTextNumberDecimal" />

            <EditText
                android:id="@+id/editTextNumberDecimal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:hint="@string/weight_volume"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/measurement_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/measurement_spinner" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="130dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/protein_source_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/protein_source"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="40dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/filterButtonFisk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/fisk"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_fisk"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonFlask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/flask"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_flask"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonFagel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/fagel"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_fagel"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonMjolk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/mjolk"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_mjolk"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/not"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_not"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonVeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/veg"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_veg"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonVilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/vilt"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_vilt"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonAgg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/agg"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_agg"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />
                <Button
                    android:id="@+id/filterButtonOvrigt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@drawable/button_state"
                    android:letterSpacing="0"
                    android:text="@string/ovrigt"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_state_reverse"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_ovrigt"
                    app:iconSize="18dp"
                    app:iconTint="@drawable/button_state_reverse"
                    app:strokeColor="@drawable/button_state_reverse"
                    app:strokeWidth="1dp" />

            </LinearLayout>



        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>